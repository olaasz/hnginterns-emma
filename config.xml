<?xml version='1.0' encoding='utf-8'?>
<widget id="com.homespike" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <access launch-external="yes" origin="whatsapp:*" />
    <access launch-external="yes" origin="intent:*" />
    <name>My Call Card</name>
    <description>
        A call card for you produced and packaged by Emmanuel Olayiwola.
    </description>
    <author email="oemmanuel@homespike.com" href="http://homespike.com/contact">
        Emmanuel Media Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
